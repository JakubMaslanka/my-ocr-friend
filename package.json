{
	"name": "my-ocr-friend",
	"version": "1.0.0",
	"description": "This project is the simplest implementation of an OCR converter, based on the Tesseract.js library to transform image characters into the text.",
	"main": "index.js",
	"scripts": {
		"develop:server": "npx nodemon",
		"develop:client": "cd client/ && yarn run develop",
		"build:server": "tsc -p .",
		"build:client": "cd client/ && yarn run build",
		"lint:client": "cd client/ && yarn run lint",
		"prod": "node dist/index.js"
	},
	"author": "Jakub Maslanka",
	"license": "MIT",
	"dependencies": {
		"cors": "2.8.5",
		"dotenv": "16.0.1",
		"express": "4.18.1",
		"express-validator": "6.14.0",
		"http-status-codes": "2.2.0",
		"sharp": "^0.30.4",
		"tesseract.js": "2.1.5"
	},
	"devDependencies": {
		"@types/cors": "2.8.12",
		"@types/dotenv": "8.2.0",
		"@types/express": "4.17.13",
		"@types/node": "17.0.32",
		"@types/sharp": "^0.30.2",
		"nodemon": "2.0.16",
		"prettier": "^2.3.2",
		"ts-node": "^10.7.0",
		"tslib": "2.4.0",
		"tslint": "6.1.3",
		"tslint-config-prettier": "^1.18.0",
		"typescript": "4.6.4"
	}
}
